<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hibernate.collections.listAnnotation.Showroom" table="SHOWROOM_SET">
        <id name="id" column="SHOWROOM_ID">
            <generator class="native"/>
        </id>
        <set name="cars" cascade="all" table="CARS_SET">
            <key column="SHOWROOM_ID"/>
            <one-to-many class="hibernate.collections.listAnnotation.Car"/>
        </set>
        <property name="manager" />
        <property name="location" />
    </class>

    <class name="hibernate.collections.listAnnotation.Car" table="CARS_SET">
        <id name="id" column="CAR_ID">
            <generator class="native"/>
        </id>
        <property name="name" />
        <property name="color" />
    </class>
</hibernate-mapping>